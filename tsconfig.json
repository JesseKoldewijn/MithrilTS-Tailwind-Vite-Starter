{
  "compilerOptions": {
    "keyofStringsOnly": true,
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxFactory": "m",
    "types": ["mithril"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
